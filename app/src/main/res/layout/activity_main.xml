<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_baseline_settings_24" />
    <View
        android:layout_width="121dp"
        android:layout_height="142dp"
        android:background="@drawable/circle"
        android:visibility="gone"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="97dp" />

    <ImageView
        android:layout_width="62dp"
        android:layout_height="52dp"
        android:layout_marginTop="-35dp"
        android:layout_marginBottom="-55dp"
        android:background="@drawable/lock"
        android:visibility="gone" />

    <ImageView
        android:layout_width="432dp"
        android:layout_height="300dp"
        android:layout_marginTop="49dp"
        android:background="@drawable/logo"

        >

    </ImageView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="231dp"
        android:layout_height="75dp"
        android:layout_marginTop="-111dp"
        android:text="Welcome to CRYPTONATOR"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="28dp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="219dp" />

    <TextView
        android:id="@+id/bluetoothStatusTv"
        android:layout_width="114dp"
        android:layout_height="34dp"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone" />


    <Button

        android:id="@+id/Onbutton"
        android:layout_width="244dp"
        android:layout_height="80dp"
        android:layout_marginTop="-42dp"
        android:background="@drawable/buttons"
        android:text="Let's Go"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textselect"
        android:layout_width="234dp"
        android:layout_height="34dp"
        android:layout_marginTop="-92dp"
        android:text="Available Devices"
        android:textAlignment="center"
        android:textSize="15dp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/select_device"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:visibility="gone"

        />

    <TextView
        android:id="@+id/textselect2"
        android:layout_width="234dp"
        android:layout_height="34dp"
        android:layout_marginTop="12dp"
        android:text="Paired Devices"
        android:textAlignment="center"
        android:textSize="15dp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/select_device2"
        android:layout_width="350dp"
        android:layout_height="190dp"
        android:visibility="gone"

        />

    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/btntransparent"
        android:text="Click to Pair your device"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="12dp"
        android:visibility="gone" />


</LinearLayout>